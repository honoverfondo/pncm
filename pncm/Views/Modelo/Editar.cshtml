@model ModeloModel
@{
    ViewData["title"] = "Editar Modelo";
}

<div class="conteiner">

    <div class="mb-5 text-center">

        <h1 class="text-light">Editar modelo</h1>
    </div>
    <form method="post" asp-controller="Modelo" asp-action="Editar">
        <input type="hidden" asp-for=Id />

        <div class="mb-3">
            <label for="Descricao" class="form-label">Nome do modelo</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Digite o modeo do equipamento">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="d-flex gap-1 mt-1">
            <button type="submit" class="btn btn-success w-20">Editar</button>
            <button type="submit" class="btn btn-primary w-20" asp-controller="Modelo" asp-action="Index">Voltar</button>

        </div>
    </form>

</div>