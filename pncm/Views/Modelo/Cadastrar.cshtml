@model ModeloModel
@{
    ViewData["title"] = "Cadastrar novo modelo";
}

<div class="conteiner">

    <div class="mb-5 text-center">

        <h1 class="text-light">Cadastrar de novo modelo</h1>
    </div>
    <div class="row">
        <div class="col-md-8">

            <form method="post" asp-controller="Modelo" asp-action="Cadastrar">
               
                <div class="mb-3">
                    <label for="Descricao" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="Nome" id="Descricao" placeholder="Digite a marca">
                    <span class="text-danger" asp-validation-for="Nome"></span>
                </div>

                <div class="d-flex gap-1 mt-1">
                    <button type="submit" class="btn btn-success w-20">Salvar</button>
                    <button type="submit" class="btn btn-primary w-20" asp-controller="Modelo" asp-action="Index">Voltar</button>

                </div>
            </form>

        </div>
    </div>


</div>