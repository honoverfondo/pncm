@model IEnumerable<ModeloModel>
<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <a class="btn btn-success mx-2" asp-controller="Modelo" asp-action="Exportar">EXPORTAR</a>
            <a class="btn btn-success mx-2" asp-controller="Modelo" asp-action="Cadastrar">REGISTAR NOVO MODELO</a>
        </div>

    </div>

    @if (TempData["mensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">

            @TempData["mensagemSucesso"];

        </div>
    }

    <table id="tabela" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Descricao da Modelo</th>
                <th scope="col">Data Registo</th>
                <th scope="col">Accoes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {
                @foreach (var modelo in Model)
                {

                    <tr>
                        <th scope="row">@modelo.Id</th>
                        <td>@modelo.Nome</td>
                        <td>@modelo.DataReg.ToString("dd-MM-yyyy")</td>
                        <td>
                            <a class="btn btn-warning mx-2 " asp-controller="Modelo" asp-action="Editar" asp-route-id="@modelo.Id">Editar</a>
                            <a class="btn btn-primary mx-2 " asp-controller="Modelo" asp-action="Detalhes" asp-route-id="@modelo.Id">Detalhes</a>
                            <a class="btn btn-danger mx-2" asp-controller="Modelo" asp-action="Eliminar" asp-route-id="@modelo.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>