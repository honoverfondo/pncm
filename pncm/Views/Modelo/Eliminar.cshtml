@model ModeloModel
@{
    ViewData["title"] = "Eliminar modelo";
}

<div class="conteiner">

    <div class="mb-5 text-center">

        <h1 class="text-light">Elininar modelo</h1>
    </div>
    <form method="post" asp-controller="Modelo" asp-action="Eliminar">
        <input type="hidden" asp-for=Id />

        <div class="mb-3">
            <label for="Descricao" class="form-label">Descricao do modelo</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Digite o modelo do equipamneto" disabled>
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="d-flex gap-1 mt-1">
            <button type="submit" class="btn btn-danger w-20">Elininar</button>
            <button type="submit" class="btn btn-primary w-20" asp-controller="Marca" asp-action="Index">Voltar</button>

        </div>
    </form>

</div>