@model IEnumerable<MarcaModel>
<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <a class="btn btn-success mx-2" asp-controller="Marca" asp-action="Exportar">EXPORTAR</a>
            <a class="btn btn-success mx-2" asp-controller="Marca" asp-action="Cadastrar">REGISTAR NOVA MARCA</a>
        </div>       
        
    </div>
    
    @if (TempData["mensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">

            @TempData["mensagemSucesso"];

        </div>
    }

    <table id="tabela" class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Descricao da Marca</th>
                <th scope="col">Data Registo</th>
                <th scope="col">Accoes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if(Model != null){
                @foreach(var marca in Model){

                    <tr>
                        <th scope="row">@marca.Id</th>
                        <td>@marca.Descricao</td>
                        <td>@marca.DataCadastro.ToString("dd-MM-yyyy")</td>
                        <td>
                            <a class="btn btn-warning mx-2 " asp-controller="Marca" asp-action="Editar" asp-route-id="@marca.Id">Editar</a>
                            <a class="btn btn-primary mx-2 " asp-controller="Marca" asp-action="Detalhes" asp-route-id="@marca.Id">Detalhes</a>
                            <a class="btn btn-danger mx-2" asp-controller="Marca" asp-action="Eliminar" asp-route-id="@marca.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            }
       
        </tbody>
    </table>
</div>